//Write a program to compute the sum and mean of 
//the elements of a two-dimensional array.

#include <stdio.h>

int main() {
    int mat[10][10], rows, cols, i, j;
    long sum = 0;
    float mean;

    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    printf("Enter the number of columns: ");
    scanf("%d", &cols);

    printf("Enter the elements of the matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &mat[i][j]);
            sum += mat[i][j]; // adding matrix into sum
        }
    }

    mean = sum / (rows * cols); //mean formula

    printf("The sum of the elements is: %d\n", sum);
    printf("The mean of the elements is: %.2f\n", mean);

    return 0;
}
